<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F3">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- â­ NAVIGATION BAR -->
        <LinearLayout
            android:id="@+id/topTabs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#C8B58B"
            android:weightSum="3"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="28dp">

            <TextView
                android:id="@+id/tabLogout"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tabMain"
                android:text="Main Page"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tabLogin"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <!-- TITLE -->
        <TextView
            android:text="Manage Appointments"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#3E3E3C"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- CARD 1 - SELECT EXISTING -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="22dp"
            android:background="#FFFFFF"
            android:elevation="6dp"
            android:layout_marginBottom="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Select Appointment (for Update / Delete)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#3E3E3C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spAppointment"
                android:background="#EFEFEF"
                android:padding="14dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="55dp" />
        </LinearLayout>

        <!-- CARD 2 - INSERT / UPDATE DETAILS -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="22dp"
            android:background="#FFFFFF"
            android:elevation="6dp"
            android:layout_marginBottom="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- SERVICE -->
            <TextView
                android:text="Service"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spService"
                android:background="#EFEFEF"
                android:padding="14dp"
                android:layout_marginBottom="18dp"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <!-- CUSTOMER -->
            <TextView
                android:text="Customer"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spCustomer"
                android:background="#EFEFEF"
                android:padding="14dp"
                android:layout_marginBottom="18dp"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <!-- EMPLOYEE -->
            <TextView
                android:text="Employee"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spEmployee"
                android:background="#EFEFEF"
                android:padding="14dp"
                android:layout_marginBottom="18dp"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <!-- DATE -->
            <TextView
                android:text="Date"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etDate"
                android:hint="Select date"
                android:background="#EFEFEF"
                android:padding="14dp"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="18dp"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <!-- TIME -->
            <TextView
                android:text="Time"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etTime"
                android:hint="Select time"
                android:background="#EFEFEF"
                android:padding="14dp"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="18dp"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <!-- STATUS -->
            <TextView
                android:text="Status"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spStatus"
                android:background="#EFEFEF"
                android:padding="14dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="55dp" />
        </LinearLayout>

        <!-- BUTTONS ROW -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnInsert"
                android:text="Insert"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="#C8B58B"
                android:textColor="#FFFFFF"
                android:padding="14dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btnUpdate"
                android:text="Update Status"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="#8F8062"
                android:textColor="#FFFFFF"
                android:padding="14dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btnDelete"
                android:text="Delete"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="#D9534F"
                android:textColor="#FFFFFF"
                android:padding="14dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <!-- SHOW ALL BUTTON -->
        <Button
            android:id="@+id/btnShowAll"
            android:text="View All Appointments"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#C8B58B"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:layout_marginBottom="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- LIST OF APPOINTMENTS -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAppointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp" />

    </LinearLayout>
</ScrollView>
