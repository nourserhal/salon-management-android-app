<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- â­ NAV BAR (beige-gold) -->
        <LinearLayout
            android:id="@+id/topTabs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#C8B58B"
            android:weightSum="3"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tabLogout"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tabMain"
                android:text="Main Page"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tabLogin"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <!-- CONTENT -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:text="Book Appointment"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#3E3E3C"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- CARD 1: SERVICE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginBottom="18dp">

                <TextView
                    android:text="Service"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#3E3E3C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerServices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_card"
                    android:padding="12dp"
                    android:layout_marginBottom="14dp" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:text="Price: -"
                    android:textColor="#C8B58B"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtDuration"
                    android:text="Duration: -"
                    android:textColor="#C8B58B"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- CARD 2: DATE & TIME -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <!-- Date -->
                <TextView
                    android:text="Date"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#3E3E3C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etDate"
                    android:hint="Select date"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/rounded_card"
                    android:padding="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp" />

                <!-- Time -->
                <TextView
                    android:text="Time"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#3E3E3C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etTime"
                    android:hint="Select time"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/rounded_card"
                    android:padding="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Confirm Button -->
            <Button
                android:id="@+id/btnConfirm"
                android:text="Confirm Appointment"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="#C8B58B"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
