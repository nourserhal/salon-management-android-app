<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F3">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- NAV BAR (same, not deleted) -->
        <LinearLayout
            android:id="@+id/topTabs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="#C8B58B"
            android:gravity="center">

            <TextView
                android:id="@+id/tabLogout"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tabMain"
                android:text="Main Page"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tabLogin"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Welcome -->
        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="#3E3E3C"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="24dp" />

        <!-- Card Button 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="3dp"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/btnBook"
                android:text="Book Appointment"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#C8B58B"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Card Button 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="3dp"
            android:gravity="center">

            <TextView
                android:id="@+id/btnMyAppointments"
                android:text="My Appointments"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#C8B58B"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
