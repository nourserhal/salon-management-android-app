<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F3">

    <LinearLayout
        android:orientation="vertical"
        android:padding="40dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TITLE -->
        <TextView
            android:text="Register"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#3E3E3C"
            android:gravity="center"
            android:layout_marginBottom="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- WHITE CARD -->
        <LinearLayout
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="7dp"
            android:padding="28dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- NAME -->
            <EditText
                android:id="@+id/edtName"
                android:hint="Full Name"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="16dp"
                android:background="#EFEFEF"
                android:textColor="#3E3E3C"
                android:layout_marginBottom="20dp" />

            <!-- EMAIL -->
            <EditText
                android:id="@+id/edtEmailReg"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="16dp"
                android:background="#EFEFEF"
                android:textColor="#3E3E3C"
                android:layout_marginBottom="20dp" />

            <!-- PASSWORD -->
            <EditText
                android:id="@+id/edtPasswordReg"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="16dp"
                android:background="#EFEFEF"
                android:textColor="#3E3E3C"
                android:layout_marginBottom="20dp" />

            <!-- PHONE -->
            <EditText
                android:id="@+id/edtPhone"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="16dp"
                android:background="#EFEFEF"
                android:textColor="#3E3E3C"
                android:layout_marginBottom="20dp" />

            <!-- GENDER LABEL -->
            <TextView
                android:text="Gender"
                android:textColor="#3E3E3C"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- GENDER SPINNER (instead of RadioGroup) -->
            <Spinner
                android:id="@+id/spGender"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#EFEFEF"
                android:padding="12dp"
                android:layout_marginBottom="30dp" />

            <!-- DOB -->
            <EditText
                android:id="@+id/edtDob"
                android:hint="Date of Birth (YYYY-MM-DD)"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="16dp"
                android:background="#EFEFEF"
                android:textColor="#3E3E3C"
                android:layout_marginBottom="30dp" />

            <!-- REGISTER BUTTON -->
            <Button
                android:id="@+id/btnRegister"
                android:text="Create Account"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="#C8B58B"
                android:padding="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- LOGIN LINK -->
        <TextView
            android:id="@+id/txtLogin"
            android:text="Already have an account? Login"
            android:textSize="18sp"
            android:textColor="#8F8062"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
