<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F3">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ⭐ NAV BAR -->
        <LinearLayout
            android:id="@+id/topTabs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#C8B58B"
            android:weightSum="3"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabLogout"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tabMain"
                android:text="Main Page"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tabLogin"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- TITLE -->
        <TextView
            android:text="Employee Dashboard"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#3E3E3C"
            android:gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Employee Name -->
        <TextView
            android:id="@+id/txtEmpName"
            android:text="Employee Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#C8B58B"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- ⭐ BUTTON: View My Appointments -->
        <Button
            android:id="@+id/btnShowMyAppointments"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#C8B58B"
            android:text="View My Appointments"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:elevation="4dp"
            android:layout_marginBottom="20dp"/>

        <!-- CARD 2: Mark Completed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="3dp"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:text=""
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#3E3E3C"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnMarkCompleted"
                android:text=""
                android:textColor="#FFFFFF"
                android:background="#C8B58B"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Result Box -->
        <TextView
            android:id="@+id/txtEmpAppointments"
            android:padding="16dp"
            android:textColor="#3E3E3C"
            android:textSize="14sp"
            android:background="#FFFFFF"
            android:elevation="3dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>
